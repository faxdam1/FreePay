<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 						   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
 						   http://www.springframework.org/schema/context
 						   http://www.springframework.org/schema/context/spring-context-3.0.xsd">


   <bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
        <property name="scopes">
            <map>
                <entry key="view">
                    <bean class="com.freepay.infraestructura.shared.ViewScope"/>
                </entry>
            </map>
        </property>
    </bean>

	<context:annotation-config />

	<context:component-scan base-package="com.freepay.infraestructura.persistencia.impl" />
	<context:component-scan base-package="com.freepay.aplicacion" />

	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://181.143.12.230:3306/freepay" />
		<property name="username" value="abetancur" />
		<property name="password" value="abm.023" />
	</bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<constructor-arg ref="dataSource"></constructor-arg>
	</bean>
	
	<!--Inicializo Repositorios-->
	<bean id="datafonoRepository" class="com.freepay.infraestructura.persistencia.impl.DatafonoRepository"></bean>
	
	<!--Inicializo Servicios de Dominio-->
	<bean id="datafonoService" class="com.freepay.dominio.servicio.DatafonoService">
		<property name="datafonoRepository" ref="datafonoRepository" ></property>
	</bean>
	
	<!--Inicializo Servicios de Dominio-->
	<bean id="generarCobroBean" class="com.freepay.aplicacion.GenerarCobroBean">
		<property name="datafonoService" ref="datafonoService" ></property>
	</bean> 
	
</beans>